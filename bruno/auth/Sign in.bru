meta {
  name: Sign in
  type: http
  seq: 3
}

post {
  url: {{BASE_URL}}/api/auth/sign-in
  body: json
  auth: inherit
}

body:json {
  {
    "email": "{{USER_EMAIL}}",
    "password": "{{USER_PASSWORD}}"
  }
}

script:post-response {
  if (res.status == 200) {
      const token = res.body.token;
      bru.setEnvVar("ACCESS_TOKEN", token)
  }
}
